<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All vendors
    </h1>

    <a href="/vendors/new" class="btn btn-block btn-outline-secondary">
      Add a new vendor
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "vendor_templates/vendors_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Name
        </th>

        <th>
          Deleted
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @vendors.each do |vendor| %>
      <tr>
        <td>
          <%= vendor.id %>
        </td>

        <td>
          <%= vendor.name %>
        </td>

        <td>
          <%= vendor.deleted %>
        </td>

        <td>
          <%= time_ago_in_words(vendor.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(vendor.updated_at) %> ago
        </td>

        <td>
          <a href="/vendors/<%= vendor.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @vendors, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>

<form action="/create_budget_from_category" method="post">

  <div class="form-group">
    <label for="description">
      Description
    </label>

    <input type="text" id="description" name="description" class="form-control" value="<%= @budget.description %>">
  </div>

  <input type="hidden" name="category_id" value="<%= @category.id %>">

  <div class="form-group">
    <label for="deleted">
      Deleted
    </label>
    <input id="deleted" class="form-check-input" name="deleted" type="checkbox" <%= "checked" if @budget.deleted %>>
  </div>

  <div class="form-group">
    <label for="month_date">
      Month date
    </label>

    <input type="text" id="month_date" name="month_date" class="form-control" value="<%= @budget.month_date %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create budget
  </button>
</form>

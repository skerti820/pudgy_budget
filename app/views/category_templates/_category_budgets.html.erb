<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Budgets

    <a data-toggle="collapse" href="#category_budgets_new_form">
      Add budget
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @category.budgets.each do |budget| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <a href="/budgets/<%= budget.id %>">
          <%= budget.description %>
        </a>

        <a href="/delete_budget_from_category/<%= budget.id %>">
          Delete
        </a>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="category_budgets_new_form">
        <%= render partial: "category_templates/category_budgets_new_form" %>
      </div>
    </div>

  </ul>
</div>

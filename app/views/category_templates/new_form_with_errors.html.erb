<!-- Validation failure messages -->
<% if @category.present? %>
  <% if @category.errors.any? %>
    <% @category.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new category
</h1>


<hr>

<!-- Form category start -->
<form action="/create_category" method="post">
<!-- Form category end -->

  <!-- Label and input for name start -->
  <div class="form-group">
    <label for="name">
      Name
    </label>

    <!-- Input for name start -->
    <input type="text" id="name" name="name" class="form-control" value="<%= @category.name %>">
    <!-- Input for name end -->
  </div>
  <!-- Label and input for name end -->

  <!-- Label and input for transation_id start -->
  <div class="form-group">
    <label for="transation_id">
      Transation
    </label>

    <!-- Input for transation_id start -->
    <input type="text" id="transation_id" name="transation_id" class="form-control" value="<%= @category.transation_id %>">
    <!-- Input for transation_id end -->
  </div>
  <!-- Label and input for transation_id end -->

  <button class="btn btn-block btn-outline-secondary">
    Create category
  </button>
</form>

<hr>

<a href="/categories">
  Go back
</a>

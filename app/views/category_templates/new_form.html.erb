<h1>
  Add a new category
</h1>


<hr>

<!-- Form category start -->
<form action="/create_category" method="post">
<!-- Form category end -->

  <!-- Label and input for name start -->
  <div class="form-group">
    <label for="name">
      Name
    </label>

    <!-- Input for name start -->
    <input type="text" id="name" name="name" class="form-control">
    <!-- Input for name end -->
  </div>
  <!-- Label and input for name end -->

  <!-- Label and input for transation_id start -->
  <div class="form-group">
    <label for="transation_id">
      Transation
    </label>

    <!-- Input for transation_id start -->
    <%= select_tag(:transation_id, options_from_collection_for_select(Bucket.all, :id, :name, @category.transation_id), :class => "form-control") %>
    <!-- Input for transation_id end -->
  </div>
  <!-- Label and input for transation_id end -->

  <button class="btn btn-block btn-outline-secondary">
    Create category
  </button>
</form>

<hr>

<a href="/categories">
  Go back
</a>

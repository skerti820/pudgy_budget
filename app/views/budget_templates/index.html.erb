<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All budgets
    </h1>

    <a href="/budgets/new" class="btn btn-block btn-outline-secondary">
      Add a new budget
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "budget_templates/budgets_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Description
        </th>

        <th>
          Category
        </th>

        <th>
          Deleted
        </th>

        <th>
          Month date
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @budgets.each do |budget| %>
      <tr>
        <td>
          <%= budget.id %>
        </td>

        <td>
          <%= budget.description %>
        </td>

        <td>
          <% if budget.category.present? %>
            <a href="/categories/<%= budget.category.id %>">
              <%= budget.category.name %>
            </a>
          <% end %>
        </td>

        <td>
          <%= budget.deleted %>
        </td>

        <td>
          <%= budget.month_date %>
        </td>

        <td>
          <%= time_ago_in_words(budget.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(budget.updated_at) %> ago
        </td>

        <td>
          <a href="/budgets/<%= budget.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @budgets, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>

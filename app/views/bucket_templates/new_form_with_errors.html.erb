<% if @bucket.present? %>
  <% if @bucket.errors.any? %>
    <% @bucket.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new bucket
</h1>


<hr>

<form action="/create_bucket" method="post">

  <div class="form-group">
    <label for="name">
      Name
    </label>

    <input type="text" id="name" name="name" class="form-control" value="<%= @bucket.name %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create bucket
  </button>
</form>

<hr>

<a href="/buckets">
  Go back
</a>

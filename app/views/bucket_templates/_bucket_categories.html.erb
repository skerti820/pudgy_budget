<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Categories

    <a data-toggle="collapse" href="#bucket_categories_new_form">
      Add category
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @bucket.categories.each do |category| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <a href="/categories/<%= category.id %>">
          <%= category.name %>
        </a>

        <a href="/delete_category_from_bucket/<%= category.id %>">
          Delete
        </a>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="bucket_categories_new_form">
        <%= render partial: "bucket_templates/bucket_categories_new_form" %>
      </div>
    </div>

  </ul>
</div>

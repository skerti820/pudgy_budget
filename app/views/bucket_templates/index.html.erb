<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All buckets
    </h1>

    <a href="/buckets/new" class="btn btn-block btn-outline-secondary">
      Add a new bucket
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "bucket_templates/buckets_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Name
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @buckets.each do |bucket| %>
      <tr>
        <td>
          <%= bucket.id %>
        </td>

        <td>
          <%= bucket.name %>
        </td>

        <td>
          <%= time_ago_in_words(bucket.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(bucket.updated_at) %> ago
        </td>

        <td>
          <a href="/buckets/<%= bucket.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @buckets, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>

<h1>
  Edit bucket #<%= @bucket.id %>
</h1>

<hr>

<!-- Form bucket start -->
<form action="/update_bucket/<%= @bucket.id %>" method="post">
<!-- Form bucket end -->

  <!-- Label and input for name start -->
  <div class="form-group">
    <label for="name">
      Name
    </label>

    <!-- Input for name start -->
    <input type="text" id="name" name="name" class="form-control" value="<%= @bucket.name %>">
    <!-- Input for name end -->
  </div>
  <!-- Label and input for name end -->

  <button class="btn btn-block btn-outline-secondary">
    Update bucket
  </button>
</form>

<hr>

<a href="/buckets">
  Go back
</a>

<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All transactions
    </h1>

    <a href="/transactions/new" class="btn btn-block btn-outline-secondary">
      Add a new transaction
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Description
        </th>

        <th>
          Vendor
        </th>

        <th>
          Category
        </th>

        <th>
          Deleted
        </th>

        <th>
          User
        </th>

        <th>
          Purchase date
        </th>

        <th>
          Amount
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @transactions.each do |transaction| %>
      <tr>
        <!-- Display transaction.id start -->
        <td>
          <%= transaction.id %>
        </td>
        <!-- Display transaction.id end -->

        <!-- Display transaction.description start -->
        <td>
          <%= transaction.description %>
        </td>
        <!-- Display transaction.description end -->

        <!-- Display transaction.vendor_id start -->
        <td>
          <%= transaction.vendor_id %>
        </td>
        <!-- Display transaction.vendor_id end -->

        <!-- Display transaction.category_id start -->
        <td>
          <%= transaction.category_id %>
        </td>
        <!-- Display transaction.category_id end -->

        <!-- Display transaction.deleted start -->
        <td>
          <%= transaction.deleted %>
        </td>
        <!-- Display transaction.deleted end -->

        <!-- Display transaction.user_id start -->
        <td>
          <%= transaction.user_id %>
        </td>
        <!-- Display transaction.user_id end -->

        <!-- Display transaction.purchase_date start -->
        <td>
          <%= transaction.purchase_date %>
        </td>
        <!-- Display transaction.purchase_date end -->

        <!-- Display transaction.amount start -->
        <td>
          <%= transaction.amount %>
        </td>
        <!-- Display transaction.amount end -->

        <!-- Display transaction.created_at start -->
        <td>
          <%= time_ago_in_words(transaction.created_at) %> ago
        </td>
        <!-- Display transaction.created_at end -->

        <!-- Display transaction.updated_at start -->
        <td>
          <%= time_ago_in_words(transaction.updated_at) %> ago
        </td>
        <!-- Display transaction.updated_at end -->

        <td>
          <a href="/transactions/<%= transaction.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
